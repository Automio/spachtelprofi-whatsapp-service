# n8n Environment Configuration
# Copy this file to .env and update the values

# ==========================================
# n8n Configuration
# ==========================================

# Your domain name (REQUIRED for webhooks to work)
# Example: n8n.yourdomain.com
N8N_HOST=your-domain.com

# Timezone for n8n
TIMEZONE=Europe/Berlin

# n8n Basic Authentication
N8N_USER=admin
N8N_PASSWORD=change_this_strong_password

# Encryption key for storing credentials (generate a random 32+ char string)
# You can generate one with: openssl rand -base64 32
N8N_ENCRYPTION_KEY=your_random_encryption_key_min_32_chars

# ==========================================
# Database Configuration
# ==========================================

POSTGRES_USER=n8n
POSTGRES_PASSWORD=secure_postgres_password
POSTGRES_DB=n8n
POSTGRES_NON_ROOT_USER=n8n
POSTGRES_NON_ROOT_PASSWORD=secure_postgres_password

# ==========================================
# WhatsApp Configuration
# ==========================================

# Get these from Meta Developer Console
# https://developers.facebook.com/

# Your WhatsApp Phone Number ID
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# Your WhatsApp Business Account ID
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# Access Token (use System User Token for production)
WHATSAPP_ACCESS_TOKEN=your_access_token

# Webhook Verify Token (create your own secret string)
WHATSAPP_VERIFY_TOKEN=mySecretVerifyToken123

# ==========================================
# SSL/TLS (if using Traefik)
# ==========================================

# Email for Let's Encrypt certificates
ACME_EMAIL=your-email@example.com

# ==========================================
# Optional: Advanced Settings
# ==========================================

# Maximum execution timeout (seconds)
EXECUTIONS_TIMEOUT=3600
EXECUTIONS_TIMEOUT_MAX=7200

# Log level (error, warn, info, verbose, debug)
N8N_LOG_LEVEL=info

# Enable/disable metrics
N8N_METRICS=false
